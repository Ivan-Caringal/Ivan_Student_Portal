@{
}
@model List<Ivan_Student_Portal.Models.StudentTable.Student>

<h1>Students</h1>
<form asp-controller="Students" asp-action="List" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by first name, last name or email..." value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="@Url.Action("List", "Students")" class="btn btn-secondary">Clear</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Location</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <th>@student.Email</th>
                <th>
                    <a class="btn btn-primary"
                       asp-controller="Students"
                       asp-action="Edit"
                       asp-route-id="@student.Id">Edit</a>
                </th>
            </tr>
        }

    </tbody>

</table>